apiVersion: v1
kind: Pod
metadata:
  name: podsync
  labels:
    name: podsync
spec:
  hostNetwork: true
  containers:
  - name: syncer
    image: gcr.io/oci-iot-ml/sync-pod-armv7l
    command: ["/bin/ash"]
    args: ["/sync.sh"]
    volumeMounts:
      - mountPath: /device
        name: devicevolume
        readOnly: false
    securityContext:
      runAsUser: 0
    env:
      - name: PROJECT
        value: "oci-iot-ml"
      - name: ARCH
        value: "armv7l"
      - name: TRACK
        value: "latest"
  volumes:
  - name: devicevolume
    hostPath:
      path: /opt/device
